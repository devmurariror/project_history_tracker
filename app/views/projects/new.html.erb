<h1 class="text-3xl font-semibold text-center mb-6">Create a New Project</h1>

<%= form_with model: @project, local: true, class: "max-w-4xl mx-auto p-4 bg-white shadow-md rounded-md" do |f| %>
  <% if @project.errors.any? %>
    <div class="bg-red-100 text-red-800 p-4 rounded-md mb-4">
      <h2 class="font-semibold">Errors:</h2>
      <ul class="list-disc pl-5">
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, prompt: "Select a Status", class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-center">
    <%= f.submit "Create Project", class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300" %>
  </div>
<% end %>

  <div class="mt-6 text-center">
      <%= link_to 'Back to Project', root_path, class: "px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600" %>
  </div>

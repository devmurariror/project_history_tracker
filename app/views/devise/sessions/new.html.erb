<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-sky-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div>
          <h1 class="text-2xl font-semibold text-center">Login</h1>
        </div>
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
              <div class="relative">
                <%= f.label :email, "Email Address", class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address",
                    class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-cyan-600" %>
              </div>
              <div class="relative">
                <%= f.label :password, "Password", class: "absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",
                    class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-cyan-600" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="text-right">
                  <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-gray-600 hover:text-cyan-500" %>
                </div>
              <% end %>
              <div class="relative">
                <%= f.submit "Log in", class: "w-full bg-cyan-500 text-white rounded-md px-4 py-2 hover:bg-cyan-600" %>
              </div>
            <% end %>
            <div class="text-center mt-4">
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-cyan-600 hover:underline" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
